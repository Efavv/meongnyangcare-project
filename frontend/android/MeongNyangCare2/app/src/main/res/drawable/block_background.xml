<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경색 설정 -->
    <solid android:color="#FFFFFF"/>

    <!-- 테두리 설정 -->
    <stroke
        android:color="#4CAF50"
        android:width="2dp"/>

    <!-- 모서리 둥글게 처리 -->
    <corners android:radius="8dp"/> <!-- 모서리 둥글기 -->

    <!-- 그림자 효과 (선택사항) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
